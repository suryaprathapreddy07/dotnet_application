@model Category

<div class="container border mt-4">
    <h1 class="text-primary">Create new category</h1>

    <form method="post" class="">
        <div asp-validation-summary="All"></div>
        <div class="container mt-2">
            <label asp-for="Name">Category Name</label>
            <input asp-for="Name" style="width:100%" class="bg-transparent text-light border-1" type="text" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="container mt-2">
            <label asp-for="DisplayOrder">Display Order</label>
            <input asp-for="DisplayOrder" style="width:100%" class="bg-transparent text-light border-1" type="number" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="container mt-2">
            <label asp-for="CreatedDate">Created Date</label>
            <input asp-for="CreatedDate" style="width:100%" class="bg-transparent text-light border-1" type="date" />
            <span asp-validation-for="CreatedDate" class="text-danger"></span>
        </div>
        <div class="container mt-4 mb-2">
            <button  type="submit" class="btn btn-primary"> Create</button>
            <a asp-controller="Category" asp-action="index" type="button" class="btn btn-dark"> Back to List</a>
        </div>
        
       
       

    </form>
</div>

@section Scripts{
    @{
        <partial name="_validationScriptsPartial"></partial>
    }
}

