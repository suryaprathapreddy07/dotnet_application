@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container pt-4 border mt-4 ">
    <div class="row ">
        <div class="col-6">
            <h1 class="text-primary">Categories</h1>
        </div>
        <div class="col-6 d-flex justify-content-end align-items-center">
            <a asp-controller="Category" asp-action="Create" type="button" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp; Create</a>
        </div>
    </div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>category</th>
            <th>display Order</th>
            <th>Created date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td style="50%">@obj.Id</td>
                <td style="50%">@obj.Name</td>
                <td style="50%">@obj.DisplayOrder</td>
                <td style="50%">@obj.CreatedDate</td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" class="btn btn-primary" asp-route-id="@obj.Id">Edit</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>


